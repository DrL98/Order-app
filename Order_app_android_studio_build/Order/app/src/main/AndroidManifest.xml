<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.order"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >

        </activity>
    
            <!-- All Product Activity -->
        <activity
            android:name=".AllProductsActivity"
            android:label="Kazuma Products" >
        </activity>
 
        <!-- Add Product Activity -->
        <activity
            android:name=".NewProductActivity"
            android:label="Add New Product" >
        </activity>
        <activity
            android:name=".PlaceOrder"
            android:label="Make Order" >
        </activity>
 
        <!-- Edit Product Activity -->
        <activity
            android:name=".EditProductActivity"
            android:label="Edit Product" >
        </activity>
         <!--  Login Activity -->
        <activity
            android:label="Kazuma"
            android:name=".Login">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>


            </activity>
 
        <!--  Register Activity -->
        <activity
            android:label="Register New Account"
            android:name=".Register"></activity>
        <activity
            android:label="My Orders"
            android:name=".ViewOrders"></activity>
       <activity
            android:label="View Feedback"
            android:name=".ViewOrderFeedback"></activity>

    </application>
 
    <!--  Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    
</manifest>
